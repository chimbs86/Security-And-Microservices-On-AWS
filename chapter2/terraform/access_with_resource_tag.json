{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllS3Activities",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "FinanceResource": "${aws:ResourceTag/Department}"
        }
      }
    }
  ]
}